    "OperationTimeoutSeconds": 300
  },
  "Tier0": {
    "Enabled": true,
    "AdminOUs": [
      "OU=Tier0-Admins,OU=Admin,DC=contoso,DC=com"
    ],
    "ServiceAccountOUs": [
      "OU=Tier0-ServiceAccounts,OU=Admin,DC=contoso,DC=com"
    ],
    "ComputerOUs": [
      "OU=Domain Controllers,DC=contoso,DC=com",
      "OU=Tier0-Servers,OU=Admin,DC=contoso,DC=com"
    ],
    "ComputerGroupName": "TG-Tier0-RestrictionGroup",
    "KerberosAuthPolicyName": "TG-Tier0-AuthPolicy",
    "AddToProtectedUsers": true,
    "EnforcePrivilegedGroupCleanup": true,
    "ExcludedAccounts": [
      "krbtgt",
      "Administrator"
    ]
  },
  "Tier1": {
    "Enabled": true,
    "AdminOUs": [
      "OU=Tier1-Admins,OU=Admin,DC=contoso,DC=com"
    ],
    "ServiceAccountOUs": [
      "OU=Tier1-ServiceAccounts,OU=Admin,DC=contoso,DC=com"
