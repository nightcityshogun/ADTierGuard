  "ServiceAccount": {
    "UseGMSA": false,
    "GMSAName": "gMSA-TierGuard$",
    "GMSAPrincipalsAllowed": "Domain Controllers"
  },
  "Scheduling": {
    "ComputerSyncIntervalMinutes": 10,
    "UserSyncIntervalMinutes": 60,
    "EnabledTasks": [
      "Tier0-ComputerSync",
      "Tier1-ComputerSync"
    ]
  },
  "Notifications": {
    "SmtpServer": "",
    "SmtpPort": 587,
    "SmtpUseSsl": true,
    "SmtpFrom": "",
