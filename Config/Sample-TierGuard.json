    "ComputerGroupName": "TG-Tier1-RestrictionGroup",
    "KerberosAuthPolicyName": "TG-Tier1-AuthPolicy",
    "AddToProtectedUsers": false,
    "EnforcePrivilegedGroupCleanup": false,
    "ExcludedAccounts": []
